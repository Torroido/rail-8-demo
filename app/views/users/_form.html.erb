<%= form_with model: user, local: true, class: "needs-validation" do |f| %>
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter user name", required: true %>
      </div>
      
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email_address, class: "form-control", placeholder: "Enter user email", required: true %>
      </div>

      <div class="text-end">
        <%= f.submit "Submit", class: "btn btn-primary" %>
        <a href="<%= users_path %>" class="btn btn-secondary">Cancel</a>
      </div>
    </div>
  </div>
<% end %>