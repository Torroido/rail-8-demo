<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">Add New User</h1>
      
      <!-- Form for creating a new user -->
      <%= form_with model: @user, local: true, class: "needs-validation" do |f| %>
        <div class="card shadow-sm">
          <div class="card-body">
            <!-- Name Field -->
            <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control", placeholder: "Enter user name", required: true %>
            </div>
            
            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email_address, class: "form-control", placeholder: "Enter user email", required: true %>
            </div>
            
            <!-- Submit Button -->
            <div class="text-end">
              <%= f.submit "Create User", class: "btn btn-primary" %>
              <a href="<%= users_path %>" class="btn btn-secondary">Cancel</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>