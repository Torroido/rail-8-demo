<%= form_for [ @current_user, @current_user.youtube_videos.new ], local: true, class: "form" do |f| %>
<!-- Hidden Fields -->
  <%= f.hidden_field :user_id, value: @current_user.id %>
  <!-- Video URL Input -->
  <div class="mb-3">
    <%= f.label :url, "YouTube Video URL", class: "form-label" %>
    <%= f.text_field :url, placeholder: "Enter YouTube URL", class: "form-control", required: true %>
  </div>

  <!-- Quality Dropdown -->
  <div class="mb-3">
    <%= f.label :quality, "Select Video Quality", class: "form-label" %>
    <%= f.select :quality, [["720p", "720p"], ["1080p", "1080p"], ["4K", "4k"]], {}, class: "form-select", required: true %>
  </div>

  <!-- Submit Button -->
  <div class="d-grid gap-2">
    <%= f.submit "Download", class: "btn btn-primary" %>
  </div>
<% end %>